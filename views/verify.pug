extends baseEmail

block content
  p Hi #{firstName},
  p Please verify your email address to complete your registration.
  p Verification is an important step to ensure the security of your account.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Verify Email
  p If you need any help, please don't hesitate to contact the support team!